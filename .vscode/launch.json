        {
            "name": "Win Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\server.exe",
            "args": ["192.168.1.255"],                      // Colocar aquí la IP de local broadcast
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
